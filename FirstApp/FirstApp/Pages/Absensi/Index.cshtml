@page
@model FirstApp.Pages.Absensi.IndexModel
@{
}

<br />
<h2>Data Absensi</h2>
<a class='btn btn-primary btn-sm mb-3' href='/Absensi/Create'>Tambah Absensi</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kode Karyawan</th>
            <th>Nama Karyawan</th>
            <th>Tanggal Masuk</th>
            <th>Tanggal Keluar</th>
            <th>Jam Masuk</th>
            <th>Jam Keluar</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.ListAbsensis.Any())
        {
            <tr>
                <td colspan="8" class="text-center">Tidak ada data absensi.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.ListAbsensis)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.kodekaryawan</td>
                    <td>@item.namakaryawan</td>
                    <td>@item.tanggalmasuk.ToString("dd-MM-yyyy")</td>
                    <td>@item.tanggalkeluar?.ToString("dd-MM-yyyy")</td>
                    <td>@item.jammasuk.ToString("hh\\:mm\\:ss")</td>
                    <td>@item.jamkeluar.ToString("hh\\:mm\\:ss")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary btn-sm" href="/Absensi/Edit?id=@item.id">Edit</a>
                            <a class="btn btn-danger btn-sm" href="/Absensi/Delete?id=@item.id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
